<%- include('partials/header.ejs') %>


<div class="loader-bg">
  <div class="loader-bar"></div>
</div>

<div id="pcoded" class="pcoded">
  <div class="pcoded-overlay-box"></div>
  <div class="pcoded-container navbar-wrapper">

      <%- include('partials/navbar.ejs') %>

      <div class="pcoded-main-container">
          <div class="pcoded-wrapper">

              <%- include('partials/sidebar.ejs') %>

              <div class="pcoded-content">

                  <div class="page-header card">
                      <div class="row align-items-end">
                          <div class="col-lg-8">
                              <div class="page-header-title">
                                  <i class="feather icon-home bg-c-blue"></i>
                                  <div class="d-inline">
                                      <h5>Dashboard</h5>
                                      <span>lorem ipsum dolor sit amet, consectetur adipisicing elit</span>
                                  </div>
                              </div>
                          </div>
                          <div class="col-lg-4">
                              <div class="page-header-breadcrumb">
                                  <ul class=" breadcrumb breadcrumb-title">
                                      <li class="breadcrumb-item">
                                          <a href="index.html"><i class="feather icon-home"></i></a>
                                      </li>
                                      <li class="breadcrumb-item"><a href="#!">Dashboard</a> </li>
                                  </ul>
                              </div>
                          </div>
                      </div>
                  </div>

                  <div class="pcoded-inner-content">
                      <div class="main-body">
                          <div class="page-wrapper">
                              <div class="page-body">

                                  <div class="row">
                                      <div class="col-md-12">
                                          <div class="card table-card">
                                              <div class="card-header">
                                                  <h5>Liste des joueurs</h5>
                                                  <div class="card-header-right">
                                                      <ul class="list-unstyled card-option">
                                                          <li class="first-opt"><i
                                                                  class="feather icon-chevron-left open-card-option"></i>
                                                          </li>
                                                          <li><i class="feather icon-maximize full-card"></i></li>
                                                          <li><i class="feather icon-minus minimize-card"></i>
                                                          </li>
                                                          <li><i class="feather icon-refresh-cw reload-card"></i>
                                                          </li>
                                                          <li><i class="feather icon-trash close-card"></i></li>
                                                          <li><i
                                                                  class="feather icon-chevron-left open-card-option"></i>
                                                          </li>
                                                      </ul>
                                                  </div>
                                              </div>
                                              <div class="card-block p-b-0">

                                                <% if (players.length > 0) { %>

                                                  <div class="table-responsive">
                                                      <table class="table table-hover m-b-0">
                                                          <thead>
                                                              <tr>
                                                                  <th>ID</th>
                                                                  <th>Photo</th>
                                                                  <th>Nom</th>
                                                                  <th>Prénom</th>
                                                                  <th>Position</th>
                                                                  <th>Numéro</th>
                                                                  <th>Action</th>
                                                              </tr>
                                                          </thead>
                                                          <tbody>
                                                            <% players.forEach((player, index) => { %>
                                                              <tr>
                                                                  <td><%= player.id %></td>
                                                                  <td><img src="/assets/img/<%= player.image %>" class="img-table p-absolute d-block text-center" alt=""></td>
                                                                  <td><%= player.lastname %></td>
                                                                  <td><%= player.firstname %></td>
                                                                  <td><%= player.position %></td>
                                                                  <td><%= player.number %></td>
                                                                  <td><a href="/players/edit/<%= player.id %>">Editer</a></td>
                                                                 
                                                              </tr>
                                                              <% }) %>
                                                          </tbody>
                                                      </table>
                                                  </div>
                                              </div>
                                              <% } else { %>

                                                <p>Il n'ya pas de joueurs, <a href="/players/add">Ajouter un joueur </a></p>

                                                <% } %>
                                          </div>
                                      </div>



                                  </div>

                              </div>
                          </div>
                      </div>
                  </div>
              </div>

              <div id="styleSelector">
              </div>

          </div>
      </div>
  </div>
</div>



<%- include('partials/footer.ejs') %>

</body>
</html>